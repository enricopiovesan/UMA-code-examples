
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UMA Contract",
  "type": "object",
  "required": ["service", "capabilities", "events", "execution"],
  "properties": {
    "service": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {"type": "string"},
        "version": {"type": "string"}
      }
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "schema"],
        "properties": {
          "name": {"type": "string"},
          "schema": {"type": "object"}
        }
      }
    },
    "execution": { "type": "object" }
  }
}
